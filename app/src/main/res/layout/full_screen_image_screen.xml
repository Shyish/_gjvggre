<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a2020202"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fullScreenImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/userProfilePictureImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/fullScreenImageView"
        android:layout_marginLeft="32dp"/>

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/userProfilePictureImageView"
        android:layout_below="@+id/fullScreenImageView"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="32dp"
        android:layout_toEndOf="@+id/userProfilePictureImageView"
        android:layout_toRightOf="@+id/userProfilePictureImageView"
        android:textColor="@android:color/white"
        android:gravity="center_vertical"
        tools:text="Username"/>

</RelativeLayout>